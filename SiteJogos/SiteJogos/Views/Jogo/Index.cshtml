@model List<JogosViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de Jogos</h2>

<a href="/Jogo/create"> Novo Negistro </a>
<br />

<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Id</th>
        <th>Descrição</th>
        <th>Valor de Locação</th>
        <th>Data de Aquicição</th>
        <th>id de Categoria</th>

    </tr>

    @foreach ( var jogos in Model)
    {
        <tr>
             <th>
                 <a href = "/Jogo/Edit?id=@jogos.id">editar</a>
                 <a href = "javascript:ApagarJogo(@jogos.id)">apagar</a>
             </th>
             <th>@jogos.id</th>
             <th>@jogos.descricao</th>
             <th>@jogos.valorLocacao</th>     
             <th>@jogos.dataAquicicao</th>
             <th>@jogos.idCategoria</th>

        </tr>
   

    }
</table>

<script>
    function ApagarJogo(id){
        if(confirm("Confirmar a exclusão do registro?")){
            location.href = "jogo/Delete?Id=" + id;
        }
    }
</script>
